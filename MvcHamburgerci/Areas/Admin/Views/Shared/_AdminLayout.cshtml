
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Yönetici Paneli</title>
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
        <link href="~/admin/css/styles.css" rel="stylesheet" />
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand text-white fs-4 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/logo.png" width="50px" alt="" />
            OzBurger
        </a>
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white fw-bold"><i class="fa-solid fa-user me-2"></i>Çıkış Yap</button>
            </form>
            </div>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">Başlangıç</div>
                            <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Yonetici">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Yönetici Paneli
                            </a>
                            <div class="sb-sidenav-menu-heading">Yetkiler</div>
                            <a class="nav-link" asp-action="Index" asp-controller="Menu" asp-area="Admin">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Menüler
                            </a>
                            <a class="nav-link" asp-action="Index" asp-controller="Malzeme" asp-area="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Ekstra Malzelemeler
                            </a>
                        <a class="nav-link" asp-action="KullaniciSiparisleri" asp-controller="Yonetici" asp-area="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Siparişler
                        </a>

                        
                            
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Giriş Yapan:</div>
                            Admin
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    @RenderBody()
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Tüm hakları saklıdır &copy; @DateTime.Now.Year</div>
                            <div>
                                <a href="#">Gizlilik Politikası</a>
                                &middot;
                                <a href="#">Şartlar &amp; Koşullar</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="~/admin/js/scripts.js"></script>
        <a href="~/lib/bootstrap/dist/js/bootstrap.bundle.js.map">~/lib/bootstrap/dist/js/bootstrap.bundle.js.map</a>
        <a href="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js.map">~/lib/bootstrap/dist/js/bootstrap.bundle.min.js.map</a>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        
    </body>
</html>


