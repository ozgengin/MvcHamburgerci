@using MvcHamburgerci.Entities


@model List<Menu>

<div class="container p-4">
    <div class="text-end">
        <a class="btn btn-success text-end" asp-action="Yeni">Yeni Menü Ekle</a>
    </div>
    <h4>Menüler</h4>
    <table class="table table-hover">
        <thead>
        <th>Ad</th>
        <th>Fiyat</th>
        <th></th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Ad</td>
                    <td class="align-middle">@item.Fiyat₺</td>
                    <td class="text-center">
                        <img style="height:100px" src="~/img/@item.DosyaAd" alt="" />
                    </td>
                    <td class="text-end align-middle">
                        <a class="btn btn-warning" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

