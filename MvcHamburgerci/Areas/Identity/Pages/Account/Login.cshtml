@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}


<div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"  />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mt-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Giriş Yap</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a class="text-secondary" id="forgot-password" asp-page="./ForgotPassword">Şifreni mi unuttun?</a>
                    </p>
                    <p>
                        <a class="text-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni Kullanıcı Oluştur</a>
                    </p>
                    <p>
                        <a class="text-secondary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta onayı gönder</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
